<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-warning">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-3">
        <!-- <label for="bukti">Bukti Pembayaran</label> -->
        <img
          src="http://localhost:3001/<%= booking.payments.proofPayment %>"
          alt="image"
          style="width: 100%; display: block;"
        />
        <div class="row" style="justify-content: center;">
          <% if(booking.payments.status == 'Process') { %>
          <form
            action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT"
            method="POST"
            class="mr-2"
          >
            <button type="submit" href="" class="btn btn-success btn-sm">
              <i class="fas fa-check"> Confirmation</i>
            </button>
          </form>
          <form
            action="/admin/booking/<%= booking.id %>/reject?_method=PUT"
            method="POST"
          >
            <button type="submit" href="" class="btn btn-danger btn-sm">
              <i class="fas fa-times"> Reject</i>
            </button>
          </form>
          <% } %>
        </div>
      </div>
      <div class="col-md-9">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableDetailBooking"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Name Member</th>
                <th>Total</th>
                <th>Bank From<URL></URL></th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= booking.memberId.firstName %> <%=
                  booking.memberId.lastName %>
                </td>
                <td>$<%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
